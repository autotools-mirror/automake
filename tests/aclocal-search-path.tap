# Usage: check_precedence DESC WINNER-NUMBER ACLOCAL-COMMAND [ARGS..]
check_precedence ()
{
  desc=$1 winnum=$2; shift; shift;
  cp -fR "$ocwd"/H3/* .
  check_expanded \
    --description "earlier $desc take precedence (simple usage, $winnum)" \
    --output "::foo-$winnum::" "$@"
}

