# Usage: check_precedence_trickier DESCRIPTION ACLOCAL-COMMAND [ARGS..]
check_precedence_trickier ()
{
  desc=$1; shift
  for i in 1 2; do
    mkdir $i.d
    cd $i.d
    cp -fR "$ocwd"/H4/* .
    mv -f configure.$i configure.in
    check_expanded \
      --description "$desc (trickier usage, $i)" \
      --output "::foo-z:: ::bar-a::" --no-output "::foo-a::" \
      "$@"
    cd ..
  done
}

